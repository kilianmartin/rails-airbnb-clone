<div class="header" style="background-image: linear-gradient( 45deg, rgba(0,0,0,0.7), rgba(0,0,0,0.4)), url('<%= cl_image_path("kitchen_header")%>');">
  <div class="banner-content">
   <% kitchen = @kitchen %>
   <h1> <%= kitchen.title %> </h1>
   <%= link_to "Check availability", kitchen_bookings_path(kitchen), {class: "btn btn-primary btn-lg btn-orange"} %>
 </div>

</div>
<div class="container-fluid">
  <div class="description-wrapper">
    <div class="left-wrapper">
      <div class="overview">
      <%= link_to raw('<i class="fa fa-chevron-left"></i> Back to kitchen overview'), kitchens_path %>
      </div>
      <div class="review-header">
       <h2>Reviews for this kitchen</h2>
       <%= link_to "Add Review", new_kitchen_review_path(@kitchen), class: "btn btn-primary review-button" %>
      </div>
        <% @kitchen.reviews.each do |review| %>
        <div class="review">
          <div class="review-name">
          <p><% review.rating.times do %>
            <i class="fa fa-star" aria-hidden="true"></i>
            <% end %></p>
          </div>
          <div class="review-body">
            <h3><%= review.title %></h3>
            <div class="review-subbody">
             <h4><%= review.subtitle %></h4>
             <p><%= review.comment %></p>
            </div>
            <%= link_to "Delete", kitchen_review_path(@kitchen), method: :delete %>
            <%= link_to " - Edit", edit_kitchen_review_path(@kitchen) %>
          </div>
        </div>
        <% end %>
   </div>

   <div class="right-wrapper">
    <div>
      <h2>Kitchen details:</h2>
      <% kitchen = @kitchen %>
      <div class="table-responsive">
        <table class="table">
          <tr>
            <td><strong> Kitchen owned by:</strong></td>
            <td> <%= kitchen.user_id %></td>
          </tr>
          <tr>
            <td><strong> Kitchen located at:</strong></td>
            <td> <%= kitchen.address %></td>
          </tr>
          <tr>
            <td><strong> Kitchen description:</strong></td>
            <td> <%= kitchen.description %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>

</div>
</div>
