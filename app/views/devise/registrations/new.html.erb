
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" align="center">
    <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, label: false, placeholder: 'your email (user@domain.com)', autofocus: true %>
        <%= f.input :password, required: true, label: false, placeholder: 'your password (6char min)' %>
<!--         hint: ("#{@minimum_password_length} characters min" if @minimum_password_length) -->
        <%= f.input :password_confirmation, required: true, label: false, placeholder: 'enter your password again' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-primary btn-md btn-orange" %>
      </div>
      <% end %>
    </div>

    <div class="row" >
      <div class="col-xs-12 col-m-6 col-l-1" align="center">
        <br>
        <%= render "devise/shared/links" %>
        <br>
      </div>
    </div>
  </div>
</div>


