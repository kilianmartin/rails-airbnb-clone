<div class="container">
  <div class="row" >
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" align="center">
      <h2>Sign-in here</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: false, placeholder: 'user@domain.com', required: false, autofocus: true %>
        <%= f.input :password, label: false, placeholder: 'your password', required: false %>
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-md btn-orange" %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row" >
    <div class="col-xs-12 col-m-6 col-l-1" align="center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
