
<div class="booking-page">
  <div class="booking-header">
    <h2><%= "Hi " + @user.first_name %></h2>
    <h2><%= "Your bookings:" %></h2>
  </div>
  <div class="card-wrapper">
    <div class="container-fluid">
      <% @bookings.each do |booking| %>
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
        <div class="card-booking" style="background-image: linear-gradient( 45deg, rgba(0,0,0,0.7), rgba(0,0,0,0.4)), url('<%= cl_image_path("random_kitchen", height: 400, width: 500, crop: :fill) %>')">
          <div class="card-category">Placeholder</div>
          <div class="card-description">
            <h2><%= booking.kitchen.title %></h2>
            <p>Kitchen owned by: <%= booking.kitchen.user_id %>
            </p>
            <p>Kitchen located at: <%= booking.kitchen.address %>
            </p>
          </div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          <%= link_to "", kitchen_path(booking.kitchen), {class: "card-link"} %>
          <div class="booking-details">
            <p><%= "Booked from: " + booking.start_date.to_s + " to " + booking.end_date.to_s %></p>
            <%= link_to "review kitchen", kitchen_booking_path(booking.kitchen, booking) %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
