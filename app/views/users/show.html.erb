<div class="container-fluid">
  <div class="booking-header">
    <h2><%= "Hi " + @user.first_name %>,</h2>
    <h2><%= "Your bookings:" %></h2>
    <div class="booking-offer">
      <%= link_to "Plan your next kitchen adventure", kitchens_path, {class: "btn btn-primary btn-lg btn-orange"} %>
    </div>
  </div>
  <div class="booking-body">
    <div class="panel-wrapper">
      <div class="row">
        <% @bookings.each do |booking| %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
        <div class="panel">
           <% if booking.kitchen.photo? %>
           <div class="panel-img-wrapper" style="background-image: linear-gradient( 45deg, rgba(0,0,0,0.7), rgba(0,0,0,0.4)), url('<%= cl_image_path kitchen.photo.path, height: 300, width: 400, crop: :fill %>')">
           </div>
           <% else %>
           <div class="panel-img-wrapper" style="background-image: linear-gradient( 45deg, rgba(0,0,0,0.7), rgba(0,0,0,0.4)), url('<%= cl_image_path('random_kitchen', height: 300, width: 400, crop: :fill) %>')">
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="booking-review">
</div>
</div>

